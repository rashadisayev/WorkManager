@model AppUserListDTO

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


@if (TempData["message"]!=null)
	{
<div class="alert alert-primary alert-dismissible fade show" role="alert">
   @( (string)TempData["message"])
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
	}

<form asp-action="Index" method="post" enctype="multipart/form-data" class=" w-75 mx-auto p-3 shadow">

    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name">Ad:</label>
        <span asp-validation-for="Name" class="text-danger"></span>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Surname">Soyad:</label>
        <span asp-validation-for="Surname" class="text-danger"></span>
        <input asp-for="Surname" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email">E-poct:</label>
        <span asp-validation-for="Email" class="text-danger"></span>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">

        <div class="row">

            <div class="col-md-4 mt-2">
                <div class="col-md-2">


                </div>
                <h5 class="text-center">Indiki sekiliniz:</h5>
                <img src="/img/@Model.Picture" class="w-100" style="height:10rem!important;" alt="@Model.Name" />
            </div>
            <div class="col-md-2">


            </div>
            <div class="col-md-4">
                <div id="alanonizleme" style="display:none!important;">
                    <h5 class="text-center">Secdiyiniz sekil:</h5>
                    <img src="" id="resimonizleme" class="w-100" style="height:10rem!important;"  />
                </div>
            </div>
            <div class="col-md-2">


            </div>

            <div class="col-md-12">

                <label>Sekil sec:</label>
                <input type="file" class="form-control-file" name="resim" id="resim" />
            </div>

        </div>

    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>


        <button type="submit" class="btn btn-info btn-sm mt-2" ><i class="fas fa-check mr-2"></i>Yadda saxla </button>
  
</form>


@section JavaScript{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#resim").change(function (e) {
                console.log(URL.createObjectURL(e.target.files[0]));

                $("#alanonizleme").show();
                $("#resimonizleme").attr('src', URL.createObjectURL(e.target.files[0]))
            });
        });
    </script>

} 


