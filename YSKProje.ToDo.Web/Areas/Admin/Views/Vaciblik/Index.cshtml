@model List<VaciblikListDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


@if (Model.Count > 0)
{
    <a asp-action="VaciblikElaveEt" class="btn btn-sm btn-outline-dark my-2" asp-controller="Vaciblik"><i class="fas fa-plus-circle mr-2"></i>Vaciblik derecesi </a>
    <table class="table table-sm table-hover">
        <thead>
            <tr>
                <th>Vaciblik derecesi</th>
                <th>Əməliyyat</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var vaciblik in Model)
            {
                <tr>
                    <td>@vaciblik.Ifade</td>
                   <td><a asp-action="VaciblikYenile" asp-controller="Vaciblik" asp-route-id="@vaciblik.Id" class="btn btn-warning btn-sm" ><i class="fas fa-edit mr-2"></i>Yenile</a></td>
                </tr>
            }

        </tbody>
    </table>
}
else
{
<div class="text-center mt-4">
    <p class=" lead">
        Sistemde elave edilmis vaciblik derecesi tapilmadi...
    </p>
    <a asp-action="VaciblikElaveEt" class="btn btn-sm btn-info my-2" asp-controller="Vaciblik">Vaciblik derecesi elave etme</a>
</div>
   
}



