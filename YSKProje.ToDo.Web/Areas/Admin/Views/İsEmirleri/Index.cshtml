@model List<IsListAllDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


@if (Model.Count != 0)
{
    <table class="table table-hover table-bordered table-sm mt-2">
        <tr>
            <th>Ad</th>
           
            <th>Yaradilma Tarixi</th>
            <th>Isleyen isci</th>
            <th>Vaciblik</th>
            <th>Rapor sayı</th>
            <th>Əməliyyat</th>
        </tr>
        @foreach (var item in Model)
        {
    <tr>
        <td>@item.Ad</td>
        
        <td>@item.OlusturulmaTarih</td>
        <td>
            @if (item.AppUser == null)
            {
                <span class="badge badge-danger">Isleyen isci yoxdur</span>
            }
            else
            {
                <span class="badge badge-success">@item.AppUser.Name isleyir</span>
            }

        </td>
        <td>@item.Vaciblik.Ifade</td>
        <td>@item.Rapors.Count()</td>
        <td>
            @if (item.AppUser == null)
            {
               <a asp-action="TapsiriqaIsciElaveEt" class="btn btn-info btn-sm" asp-route-id="@item.Id"><i class="fas fa-caret-right mr-2"></i> Isci elave et</a>
            }
            else
            {
        <a asp-action="DetayGoster" class="btn btn-info btn-sm" asp-route-id="@item.Id"><i class="fas fa-info-circle mr-2"></i>Detay Goster</a>
            }

        </td>
    </tr>
        }
    </table>
}
else
{
    <div class="my-2 text-center lead">
        Her hansisa bir tapsiriq yoxdur.
    </div>
}

