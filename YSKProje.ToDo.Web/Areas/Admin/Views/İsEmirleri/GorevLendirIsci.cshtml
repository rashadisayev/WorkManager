@model IsciGorevlendirListDTO
@{
    ViewData["Title"] = "GorevLendirIsci";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="row mt-2">

    <div class="col-md-4">
        <div class="card border border-primary shadow">
            <div class="card-header">
                <h4 class="text-center lead pt-2">Tapsiriq melumatlari</h4>
            </div>

            <div class="card-body">
                <h5 class="card-title">@Model.Is.Ad</h5>
                <p class="card-text">
                    @Model.Is.Aciklama

                </p>
                <p class="card-text">
                    <strong>Vaciblik veziyyeti:</strong>
                    <span class="badge badge-primary">@Model.Is.Vaciblik.Ifade</span>
                </p>
                <p class="card-text">
                    <strong>@Model.Is.OlusturulmaTarih.ToString("D")</strong>
                </p>
            </div>
        </div>

    </div>

    <div class="col-md-8">
      
        <div class="card border border-primary mb-3 p-2">
            <div class="card-header"></div>
            <h5 class="card-title">Isci melumatlari</h5>
            <div class="row no-gutters">
                <div class="col-md-4">
                    <img src="/img/@Model.AppUser.Picture" class="card-img img-thumbnail  shadow" style="height:10rem!important" alt="@Model.AppUser.Name">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">@Model.AppUser.Name @Model.AppUser.Surname</h5>
                        <p class="card-text">

                            <getirGorevAppUserId app-user-id="Model.AppUser.Id"></getirGorevAppUserId>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">@Model.AppUser.Email</small>

                        </p>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="col-md-12">
        <form asp-action="TapsiriqaIsciElaveEt">
            <p class="lead">Yuxaridaki is gosterilmis isciye verilecek.Bu emeliyyati icra etmeye eminsiz???</p>
            <input type="hidden" name="IsciId" value="@Model.AppUser.Id" />
            <input type="hidden" name="IsId" value="@Model.Is.Id" />
            <div class="form-group text-center">
                <a asp-action="TapsiriqaIsciElaveEt" asp-route-id="@Model.Is.Id" class="btn btn-warning ">Xeyir</a>
                <button type="submit" class="btn btn-primary">Beli</button>
            </div>
        </form>
        

    </div>
</div>

