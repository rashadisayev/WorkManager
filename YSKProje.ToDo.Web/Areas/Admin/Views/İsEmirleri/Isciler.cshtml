@model List<AppUserListDTO>
@{
    ViewData["Title"] = "Isciler";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
     string s = (string)ViewBag.Axrarilan;
}

<div class=" mt-2 row">
    <div class="col-md-12 mb-2">

        @if (!string.IsNullOrWhiteSpace(s))
	{
		 <div class="border border-dark p-3  mb-2">
             <strong>
                 @s
                 sözü üçün neticeleri görürsüz
             </strong>
             <a asp-action="Isciler"  class="float-right">Filteri qaldir</a>
         </div>
	}
        <form method="get" asp-action="Isciler" class=" form-control-sm border border-primary border-top-0 border-right-0 border-left-0  text-right">
            <input type="text" name="s" />
            <button type="submit" class="btn btn-primary btn-sm">Axtar</button>

        </form>
    </div>
   
    <div class="col-md-12">

        @foreach (var item in Model)
        {
            <div class="card border border-primary mb-3 p-2">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img src="/img/@item.Picture" class="card-img img-thumbnail  shadow"  style="height:10rem!important" alt="@item.Name">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name @item.Surname</h5>
                            <p class="card-text">
                            
                           <getirGorevAppUserId app-user-id="item.Id"></getirGorevAppUserId>
                            </p>
                            <p class="card-text"><small class="text-muted">@item.Email</small>                          
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        }
        <nav aria-label="Page navigation example">
            <ul class="pagination">

                @if (!string.IsNullOrWhiteSpace(s))
                {
                    @for (int i = 1; i <= ViewBag.ToplamSeyife; i++)
                    {
                        <li class="page-item @(ViewBag.AktivSeyife==i?"active":"")">
                            <a class="page-link " asp-action="Isciler" asp-route-sayfa="@i" asp-route-s="@s">@i</a>
                        </li>
                    }
                }
                else
                {
                    @for (int i = 1; i <= ViewBag.ToplamSeyife; i++)
                    {
                        <li class="page-item @(ViewBag.AktivSeyife==i?"active":"")">
                            <a class="page-link " asp-action="Isciler" asp-route-sayfa="@i">@i</a>
                        </li>
                    }
                }



            </ul>
        </nav>
    </div>



</div>





