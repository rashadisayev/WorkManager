@model List<BildirisListDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
}

@if (Model.Count > 0)
{
    @foreach (var bildiris in Model)
    {
        <form method="post" asp-action="Index" class="my-1">
            <div class="alert alert-light p-3 my-2">
                <input type="hidden" value="@bildiris.Id" name="Id" />
                <p class="lead">
                    @bildiris.Aciklama
                    <button type="submit" class="btn btn-info btn-sm float-right">Oxundu</button>
                </p>
            </div>
        </form>

    }
}

else
{

    <div class="alert alert-light p-3 my-2">
        <p class="lead">
            Oxunmamis bildirisiniz yoxdur!!!
        </p>
    </div>

}



