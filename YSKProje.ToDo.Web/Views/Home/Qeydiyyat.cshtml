@model AppUserAddDTO
@{
    ViewData["Title"] = "Qeydiyyat";
    Layout = "~/Views/Shared/_StandartLayout.cshtml";
}



<form asp-action="Qeydiyyat" method="post" class="mt-4 w-75 mx-auto p-3 shadow">

    <h4 class="text-center">Qeydiyyatdan kecin  </h4>
    <div class="form-group">
        <label asp-for="Name">Ad:</label>
        <span asp-validation-for="Name" class="text-danger"></span>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Surname">Soyad:</label>
        <span asp-validation-for="Surname" class="text-danger"></span>
        <input asp-for="Surname" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email">E-poct:</label>
        <span asp-validation-for="Email" class="text-danger"></span>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password">Sifre:</label>
        <span asp-validation-for="Password" class="text-danger"></span>
        <input type="password" asp-for="Password" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword">Sifre tekrari:</label>
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        <input type="password" asp-for="ConfirmPassword" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="UserName">Istifadeci adi:</label>
        <span asp-validation-for="UserName" class="text-danger"></span>
        <input asp-for="UserName" class="form-control" />
    </div>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <a asp-action="Index" class="btn btn-warning btn-sm">Legv et</a>
    <button type="submit" class="btn btn-info btn-sm">Qeydiyyatdan kec</button>

</form>


